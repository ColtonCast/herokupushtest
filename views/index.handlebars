<body id="home">
{{!-- Header jumbotron--}}
<div class="jumbotron container panel">
    <div class="container">
        <div class="typewriter">
            <h1>Codebusters</h1>
        </div>
        <h3>Test your skills by completing the next coding coding challenges. You will earn points for all correct 
        answers. Move up the rankings as you compete with other web developers. Good luck! 
        </h3>

        <a href="/"><button class="btn btn-primary btn-lg">Home Page</button></a>
        {{!-- <a href="/challenge1"><button class="btn btn-primary btn-lg">Code Challenge</button></a> --}}
        <form action="/code" method="POST">
            <input type="submit" value="Code Challenge" class="btn btn-primary btn-lg">
        </form>
    </div>
</div>

{{!-- Leaderboard Container--}}
<div class="container panel">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Ranking #</th>
                <th scope="col">Player Name</th>
                <th scope="col">Connect</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="row">{{id}}</th>
                <td scope="row">{{users.fullname}}</th>
                <td scope="row">{{users.score}}</th>
            </tr>
        </tbody>
    </table>
</div>
</body>